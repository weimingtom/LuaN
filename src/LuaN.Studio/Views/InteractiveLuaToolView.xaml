<UserControl x:Class="LuaN.Studio.Views.InteractiveLuaToolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LuaN.Studio.Views"
             xmlns:dt="clr-namespace:LuaN.Studio.DesignTime"
             xmlns:controls="clr-namespace:LuaN.Studio.Controls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=dt:DtInteractiveLuaToolViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <controls:ConsoleControl Console="{Binding Console}"></controls:ConsoleControl>
        <TextBox 
            x:Name="tInput"
            Grid.Row="1" 
            KeyDown="tInput_KeyDown"
            PreviewKeyDown="tInput_PreviewKeyDown"
            />
    </Grid>
</UserControl>
